<div class="ui main container segment">
    <div class="ui new header">Edit <%= blog.title%></div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label>Body</label>
                <textarea name="blog[body]" id="" cols="30" rows="8" > <%=blog.body%></textarea>
            </div>
           
            <button class="ui inverted green button">Submit</button>            
        </form>
</div>

