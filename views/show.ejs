<%-  include ('partials/header') %>
<br>
<br>
<div class="container">
<div class="ui main container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached ">
        <div class="item">
        <img class="ui centered rounded image" src="<%=blog.image%>"  alt="">
        <div class="content">
            <span><%= blog.created.toDateString() %></span>
        <div class="description"><p><%- blog.body%></p></div>        
        </div>
        </div>
        </div> 
        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" id="delete">
            <button class="ui inverted red button">Delete</button>
        </form>
        <a class="ui inverted blue button" href="/blogs/<%=blog._id%>/edit">Edit</a>
    </div>
</div>
<%-  include ('partials/footer') %>