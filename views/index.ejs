<%-  include ('partials/header') %>
<br>
<br>
<div class="ui main container">
    <div class="ui huge header">BlogApp</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%=blog.image%>" height="200px" weight="200px" alt="">
                </div>
                <div class="content">
                    <a href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                </div>
                <div class="meta">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blog.body.substring(0,50)%>...</p>
                </div>
                <div class="extra">
                    <a href="/blogs/<%= blog._id %>" class="ui floated basic violet button ">
                        Read More
                        <i class="right chevron icon"></i>
                    </a>
                </div>
            </div>

            <% }); %>
        </div>
    </div>

</div>


<%-  include ('partials/footer') %>